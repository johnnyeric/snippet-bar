{
  "name": "snippet-bar",
  "version": "0.1.1",
  "description": "A desktop menubar app for copying, pasting and re-using text snippets",
  "main": "app/main.js",
  "scripts": {
    "start": "electron app/main.js",
    "build-mac": "electron-packager . 'Snippet Bar' --platform=darwin --arch=x64 --out=./builds --version=0.36.2 --overwrite --icon='./app/static/img/icon' --prune --ignore='./docs' --ignore='./builds'",
    "build-linux": "electron-packager . 'Snippet Bar' --platform=linux --arch=x64 --out=./builds --version=0.36.2 --overwrite --prune --ignore='./docs' --ignore='./builds'",
    "build-windows": "electron-packager . 'Snippet Bar' --platform=win32 --arch=x64 --out=./builds --version=0.36.2 --overwrite --prune --ignore='./docs' --ignore='./builds'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teesloane/snippet-bar"
  },
  "author": "Tyler and Bronek",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/teesloane/snippet-bar/issues"
  },
  "homepage": "https://github.com/teesloane/snippet-bar#readme",
  "dependencies": {
    "clipboard": "^1.5.5",
    "flux": "^2.1.1",
    "font-awesome": "^4.4.0",
    "highlight.js": "^9.1.0",
    "keymirror": "^0.1.1",
    "menubar": "^4.1.1",
    "normalize.css": "^3.0.3",
    "react": "^0.14.6",
    "react-addons-update": "^0.14.6",
    "react-dom": "^0.14.6",
    "sweetalert": "^1.1.3",
    "sweetalert-react": "^0.4.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "^0.36.2",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.0",
    "gulp-cssnano": "^2.1.0",
    "gulp-plumber": "^1.0.1",
    "gulp-sass": "^2.1.0",
    "gulp-uglify": "^1.5.1"
  }
}
